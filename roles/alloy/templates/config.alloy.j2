// For a full configuration reference, see https://grafana.com/docs/alloy
logging {
  level = "warn"
}

local.file "loki_password" {
  filename  = "/var/lib/alloy/secrets/loki_pass"  
  is_secret = true
}

loki.write "default" {
  endpoint {
    url = "{{ alloy.loki_url }}/api/v1/push"
    basic_auth {
      username = "loki"
      password = local.file.loki_password.content
    }
  }
}

loki.source.journal "journalctl" {
  forward_to    = [loki.write.default.receiver]
  labels        = {node_name = "{{ inventory_hostname }}"}
}
