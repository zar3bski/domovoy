# redirect all subdomains to k3s load balancer endpoints
# generated by Ansible: do not edit directly

server {
    listen      80;
    server_name *.{{ inventory_hostname }};
    location ~ {
        proxy_pass http://localhost:8080;
        proxy_buffers           32 8m;
        proxy_busy_buffers_size     25m;
        proxy_buffer_size 1024k;
        proxy_ignore_headers "Cache-Control" "Expires";
        proxy_max_temp_file_size 0;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        client_max_body_size        1024m;
        client_body_buffer_size     8m;
        proxy_connect_timeout 300;
        proxy_read_timeout 300;
        proxy_send_timeout 300;
        proxy_intercept_errors off;
    }
}

server {
    listen      443 ssl;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_certificate /etc/ssl/certs/openmediavault-757f842e-faf0-11e8-a284-3a6331353066.crt;
    ssl_certificate_key /etc/ssl/private/openmediavault-757f842e-faf0-11e8-a284-3a6331353066.key;
